{% comment %}
Renders a standard dropdown style menu for the header.

Usage:

{% endcomment %}

{% style  %} 

  .menu-container {
          display: flex;
        }
        .menu-container > div {
          padding: 0 10px;
          cursor: pointer;
        }
  
        .menu-item-with-child {
          position: relative;
        }
        .child-item {
          display: none;
          position: absolute;
          width: 110%;
          left: 50%;
          transform: translateX(-50%);
          border: 1px solid #cccccc;
          border-radius: 5px;
        }
        .child-item p {
          padding: 6px 10px;
          border-bottom: 1px solid #ececec;
        }
        .menu-item-with-child:hover .child-item {
          display: block;
        }
        .child-item:hover{
          display:block;
        }
        .menu-item-with-child:hover .nav-item-parent svg {
          rotate: 180deg;
        }
        .nav-item-parent {
          display: flex;
          justify-content: space-between;
          align-items: center;
        }
   {% endstyle %}

<div class="menu-container">
        <div>
          <p>Home</p>
        </div>
        <div>
          <p>Contact</p>
        </div>
        <div class="menu-item-with-child">
          <div class="nav-item-parent">
            <p>Brands</p>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
            </svg>
          </div>
          <div class="child-item">
            <p>Adidas</p>
            <p>Nike</p>
          </div>
        </div>
        <div>
          <p>Kids</p>
        </div>
        <div>
          <p>Designers</p>
        </div>
      </div>


  {% comment %} <div class="menu-container">
        {%- for link in section.settings.menu.links -%}
          
            {%- if link.links != blank -%}
              <div class="menu-item-with-child">
                <div class="nav-item-parent">
                  <p>{{- link.title | escape -}}</p>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-4 h-4 ml-1"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19.5 8.25l-7.5 7.5-7.5-7.5"
                    />
                  </svg>
                </div>
                <div class="child-item">
                  {%- for childlink in link.links -%}
                      {%- if childlink.links == blank -%}
                      <p {% if link.current %}  class="active-nav-child"{% endif %}>
                        <a
                       
                          href="{{ childlink.url }}"
                        
                        >
                              {{ childlink.title | escape }}
                              
                              </a>  
                              </p>      
                      {% endif %}
                  {%- endfor -%}
                </div>
              </div>
            {%- else -%}
            <div>   
              <a
                id="HeaderMenu-{{ link.handle }}"
                href="{{ link.url }}"
                {% if link.current %}  class="active-nav-child"{% endif %}>
                  {{- link.title | escape -}}
                  </a>
                  </div>
            {%- endif -%}
        
        {%- endfor -%}
  </div> {% endcomment %}


